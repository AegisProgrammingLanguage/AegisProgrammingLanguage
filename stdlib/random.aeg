class RandomManager() {
    // Entier entre min (inclus) et max (exclus)
    int(min, max) {
        return rand_int(min, max)
    }
    
    // Float entre 0.0 et 1.0
    float() {
        return rand_float()
    }
    
    // Retourne un élément aléatoire d'une liste
    choice(liste) {
        var size = len(liste)
        if (size == 0) { return null }
        var idx = rand_int(0, size)
        return liste.at(idx)
    }
}

var Random = new RandomManager()
